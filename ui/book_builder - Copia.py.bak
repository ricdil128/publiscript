            tuple: (esiste, project_id, data_creazione) o (False, None, None)
        """
        try:
            conn = sqlite3.connect(self.crisp.project_db_path)
            cursor = conn.cursor()
        
            # Cerca progetti con questa keyword
            cursor.execute("""
                SELECT p.id, p.creation_date 
